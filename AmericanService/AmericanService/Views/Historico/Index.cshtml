
@{
    ViewBag.Title = "Index";
}
@model  IEnumerable<AmericanService.Models.Historico>

<head>
    <meta charset='utf-8'>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../Content/menu.css">
    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
</head>

<div id='cssmenu'>
    <ul>


        <li> @Html.ActionLink("Reclutandos", "Index", "Historico")</li>
        <li> @Html.ActionLink("Gestionar Perfil", "gestionar_perfil", "Perfil")</li>
        <li> @Html.ActionLink("Crear Perfil", "Crear", "Perfil")</li>
        <li> @Html.ActionLink("Colaboradores", "Index", "Perfil")</li>
        <li><a href='#'><span>Evaluaciones</span></a></li>
        <li><a href='#'><span>Administrador</span></a></li>
        <li> @Html.ActionLink("Histórico", "Index", "Historico")</li>
        <li class='last'><a href='#'><span>Reportes</span></a></li>
    </ul>
</div>

<h2>Histórico de reclutandos</h2>
<br />
@using (Html.BeginForm("Find", "Historico"))
{
    <p>
        Buscar: <input type="text" id="buscar_string" name="buscar_string">
        <input type="submit" value="Aceptar" />
    </p>
}

    <br />
    <body>
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>Cédula</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Fecha</th>
                <th>Cantidad</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.cedula</td>
                    <td>@item.nombre</td>
                    <td>@item.descripcion</td>
                    <td>@item.fecha</td>
                    <td>@item.cantidad</td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { cedula = item.cedula })|
                        @Html.ActionLink("Delete", "Delete", new { cedula = item.cedula })
                    </td>
                </tr>
                }

        </table>
    </body>


