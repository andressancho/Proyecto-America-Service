
@{
    ViewBag.Title = "Index";
}
@model  IEnumerable<AmericanService.Models.Historico>

<h2>Histórico de reclutandos</h2>
<br />
    <p>
        Buscar: <input type="text" name="SearchString">
        <input type="submit" value="Aceptar" />
    </p>
    <br />
    <body>
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>Cédula</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Fecha</th>
                <th>Cantidad</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>@item.cedula</td>
                <td>@item.nombre</td>
                <td>@item.descripcion</td>
                <td>@item.fecha</td>
                <td>@item.cantidad</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.cedula">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.cedula">Eliminar</a>
                </td>
            </tr>
            }

        </table>
    </body>


