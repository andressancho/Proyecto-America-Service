
@{
    ViewBag.Title = "Perfil";
    if (TempData["message"] != null)
    {
        <script type="text/javascript">
        alert(@Html.Raw(Json.Encode(TempData["message"])));
        </script>
    }
    ViewBag.Title = "Edit";

    if (Session["Sid"] == null)
    {
        Response.Redirect("../Home/Index");
    }
    if (Session["tipo"] == "Colaborador")
    {
        Response.Redirect("../Perfil/gestionar_perfil");
    }
    else if (Session["tipo"] == "Administrador")
    {
        Layout = "~/Views/Shared/_Menu.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Menu_Supervisor.cshtml";
    }
}
@model  AmericanService.Models.Formulario

<head>
    <meta charset='utf-8'>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="../Content/tabla.css">

</head>
<body>
    @using (Html.BeginForm("Edit", "Formulario"))
    {
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    <h2>Formulario</h2>
                    <br />
                    <label>Cédula:</label>
                    <input type="text" class="form-control" name="cedula" readonly value=@Model.cedula>
                    <label>Primer nombre:</label>
                    <input type="text" class="form-control" name="primer_nombre" readonly value=@Model.primer_nombre>
                    <label>Segundo nombre:</label>
                    <input type="text" class="form-control" name="segundo_nombre" readonly value=@Model.segundo_nombre>
                    <label>Primer apellido:</label>
                    <input type="text" class="form-control" name="primer_apellido" readonly value=@Model.primer_apellido>
                    <label>Segundo apellido:</label>
                    <input type="text" class="form-control" name="segundo_apellido" readonly value=@Model.segundo_apellido>
                    <input type="hidden" class="form-control" name="id_roleplay" value=@Model.id_roleplay>
                    <label>Jornada:</label>
                    <br />
                    @if (Model.jornada_diurna == true)
                    {
                        if (Model.jornada_mixta == true)
                        {
                            if (Model.jornada_nocturna == true)
                            {
                                <label>Diurna </label><input checked="checked" id="jornada" type="radio" readonly>
                                <br />
                                <label>Mixta </label><input checked="checked" id="jornada" type="radio" readonly>
                                <br />
                                <label>Nocturna </label><input checked="checked" id="jornada" type="radio" readonly>
                            }
                            else
                            {
                                <label>Diurna </label><input checked="checked" id="jornada" type="radio" readonly>
                                <br />
                                <label>Mixta </label><input checked="checked" id="jornada" type="radio" readonly>
                                <br />
                                <label>Nocturna </label><input id="jornada" type="radio" disabled>
                            }
                        }
                        else
                        {
                            if (Model.jornada_nocturna == true)
                            {
                                <label>Diurna </label><input checked="checked" id="jornada" type="radio" readonly>
                                <br />
                                <label>Mixta </label><input id="jornada" type="radio" disabled>
                                <br />
                                <label>Nocturna </label><input checked="checked" id="jornada" type="radio" readonly>
                            }
                            else
                            {
                                <label>Diurna </label><input checked="checked" id="jornada" type="radio" readonly>
                                <br />
                                <label>Mixta </label><input id="jornada" type="radio" disabled>
                                <br />
                                <label>Nocturna </label><input id="jornada" type="radio" disabled>
                            }
                        }

                    }
                    else
                    {
                        if (Model.jornada_mixta == true)
                        {
                            if (Model.jornada_nocturna == true)
                            {
                                <label>Diurna </label><input id="jornada" type="radio" disabled>
                                <br />
                                <label>Mixta </label><input checked="checked" id="jornada" type="radio" readonly>
                                <br />
                                <label>Nocturna </label><input checked="checked" id="jornada" type="radio" readonly>
                            }
                            else
                            {
                                <label>Diurna </label><input id="jornada" type="radio" disabled>
                                <br />
                                <label>Mixta </label><input checked="checked" id="jornada" type="radio" readonly>
                                <br />
                                <label>Nocturna </label><input id="jornada" type="radio" disabled>
                            }
                        }
                        else
                        {
                            if (Model.jornada_nocturna == true)
                            {
                                <label>Diurna </label><input id="jornada" type="radio" disabled>
                                <br />
                                <label>Mixta </label><input id="jornada" type="radio" disabled>
                                <br />
                                <label>Nocturna </label><input checked="checked" id="jornada" type="radio" readonly>
                            }
                            else
                            {
                                <label>Diurna </label><input id="jornada" type="radio" disabled>
                                <br />
                                <label>Mixta </label><input id="jornada" type="radio" disabled>
                                <br />
                                <label>Nocturna </label><input id="jornada" type="radio" disabled>
                            }
                        }
                    }
                    <br />
                    <label>Justificacion jornada:</label>
                    <br />
                    <textarea class="form-control"
                              id="justificacion_jornada"
                              name="justificacion_jornada"
                              rows="4"
                              cols="20"
                              readonly>@Model.justificacion_jornada</textarea>
                    <label>Fecha:</label>
                    <input type="text" class="form-control" name="fecha" readonly value=@Model.fecha>
                    <label>Salario:</label>
                    <input type="text" class="form-control" name="salario" readonly value=@Model.salario>
                    <label>Telefono:</label>
                    <input type="text" class="form-control" name="telefono" readonly value=@Model.telefono>
                    <label>Correo:</label>
                    <input type="text" class="form-control" name="correo" readonly value=@Model.correo>
                    <label>Domicilio:</label>
                    <input type="text" class="form-control" name="domicilio" readonly value=@Model.domicilio>
                    <label>Experiencia en call center:</label>
                    @if (Model.exp_call_center == true)
                    {
                        <input type="text" class="form-control" value="Si" readonly>
                    }
                    else
                    {
                        <input type="text" class="form-control" value="No" readonly>
                    }
                    <label>Experiencia en ventas:</label>
                    @if (Model.exp_ventas == true)
                    {
                        <input type="text" class="form-control" value="Si" readonly>
                    }
                    else
                    {
                        <input type="text" class="form-control" value="No" readonly>
                    }
                    <label>Experiencia en servicio al cliente:</label>
                    @if (Model.exp_servicio_cliente == true)
                    {
                        <input type="text" class="form-control" value="Si" readonly>
                    }
                    else
                    {
                        <input type="text" class="form-control" value="No" readonly>
                    }
                    <label>Detalle de experiencias:</label>
                    <textarea class="form-control"
                              id="detalle_experiencias"
                              name="detalle_experiencias"
                              rows="4"
                              cols="20"
                              readonly>@Model.detalle_experiencias</textarea>
                    <label>Experiencia en cobros:</label>
                    @if (Model.exp_cobros == true)
                    {
                        <input type="text" class="form-control" value="Si" readonly>
                    }
                    else
                    {
                        <input type="text" class="form-control" value="No" readonly>
                    }
                    <label>Experiencia mora 30:</label>
                    @if (Model.exp_mora30 == true)
                    {
                        <input type="text" class="form-control" value="Si" readonly>
                    }
                    else
                    {
                        <input type="text" class="form-control" value="No" readonly>
                    }
                    <label>Experiencia mora 60:</label>
                    @if (Model.exp_mora60 == true)
                    {
                        <input type="text" class="form-control" value="Si" readonly>
                    }
                    else
                    {
                        <input type="text" class="form-control" value="No" readonly>
                    }
                    <label>Experiencia mora 90:</label>
                    @if (Model.exp_mora90 == true)
                    {
                        <input type="text" class="form-control" value="Si" readonly>
                    }
                    else
                    {
                        <input type="text" class="form-control" value="No" readonly>
                    }
                    <label>Experiencia cartera separa:</label>
                    @if (Model.exp_cartera_separada == true)
                    {
                        <input type="text" class="form-control" value="Si" readonly>
                    }
                    else
                    {
                        <input type="text" class="form-control" value="No" readonly>
                    }
                    <label>Experiencia cobro judicial:</label>
                    @if (Model.exp_cobro_judicial == true)
                    {
                        <input type="text" class="form-control" value="Si" readonly>
                    }
                    else
                    {
                        <input type="text" class="form-control" value="No" readonly>
                    }
                    <label>Detalle experiencia en cobros:</label>
                    <textarea class="form-control"
                              readonly
                              id="detalle_exp_cobros"
                              name="detalle_exp_cobros"
                              rows="4"
                              cols="20">@Model.detalle_exp_cobros</textarea>
                    <label>Excel:</label>
                    @if (Model.excel == true)
                    {
                        <input type="text" class="form-control" value="Si" readonly>
                    }
                    else
                    {
                        <input type="text" class="form-control" value="No" readonly>
                    }
                    <label>Bachillerato:</label>
                    @if (Model.bachillerato == true)
                    {
                        <input type="text" class="form-control" value="Si" readonly>
                    }
                    else
                    {
                        <input type="text" class="form-control" value="No" readonly>
                    }
                    <input type="hidden" class="form-control" name="id_formulario" value=@Model.id_formulario>
                </div>
                <div class="col-sm">
                    <h2>Roleplay</h2>
                    <br />
                    <label>Fecha:</label>
                    <input type="date" class="form-control" name="fecha_roleplay" value=@Model.roleplay.fecha.ToString("yyyy-MM-dd")>
                    <label>Detalle:</label>
                    <textarea class="form-control"
                              id="detalle"
                              name="detalle"
                              rows="4"
                              cols="20">@Model.roleplay.detalle</textarea>
                    @if (Session["tipo"] == "Administrador")
                    {
                        <label>Visto Bueno:</label>
                        <br />
                        if (Model.roleplay.visto_bueno == "S")
                        {
                            <label>Si:</label><input checked="checked" id="visto" name="visto_bueno" type="radio" value="S">
                            <br />
                            <label>No:</label><input id="visto" name="visto_bueno" type="radio" value="N">
                            <br />
                            <label>Sin definir:</label><input id="visto" name="visto_bueno" type="radio" value="D">
                        }
                        else if (Model.roleplay.visto_bueno == "N")
                        {
                            <label>Si:</label><input id="visto" name="visto_bueno" type="radio" value="S">
                            <br />
                            <label>No:</label><input checked="checked" id="visto" name="visto_bueno" type="radio" value="N">
                            <br />
                            <label>Sin definir:</label><input id="visto" name="visto_bueno" type="radio" value="D">
                        }
                        else
                        {
                            <label>Si:</label><input id="visto" name="visto_bueno" type="radio" value="S">
                            <br />
                            <label>No:</label><input id="visto" name="visto_bueno" type="radio" value="N">
                            <br />
                            <label>Sin definir:</label><input checked="checked" id="visto" name="visto_bueno" type="radio" value="D">
                        }
                    }
                    @if (Session["tipo"] == "Supervisor")
                    {
                        <label>Visto Bueno:</label>
                        <br />
                        if (Model.roleplay.visto_bueno == "S")
                        {
                            <label>Si:</label><input checked="checked" id="visto" name="visto_bueno" disabled type="radio" value="S">
                            <br />
                            <label>No:</label><input id="visto" name="visto_bueno" disabled type="radio" value="N">
                            <br />
                            <label>Sin definir:</label><input id="visto" name="visto_bueno" disabled type="radio" value="D">
                        }
                        else if (Model.roleplay.visto_bueno == "N")
                        {
                            <label>Si:</label><input id="visto" name="visto_bueno" disabled type="radio" value="S">
                            <br />
                            <label>No:</label><input checked="checked" id="visto" disabled name="visto_bueno" type="radio" value="N">
                            <br />
                            <label>Sin definir:</label><input id="visto" disabled name="visto_bueno" type="radio" value="D">
                        }
                        else
                        {
                            <label>Si:</label><input id="visto" name="visto_bueno" disabled type="radio" value="S">
                            <br />
                            <label>No:</label><input id="visto" name="visto_bueno" disabled type="radio" value="N">
                            <br />
                            <label>Sin definir:</label><input checked="checked" id="visto" disabled name="visto_bueno" type="radio" value="D">
                        }
                    }


                    <br />

                    <label>Nota prueba de mecanografía:</label>
                    <input type="text" class="form-control" name="mecanografia">

                    <br />
                    <input type="submit" class="form-control" value="Editar" />
                </div>
            </div>
        </div>
    }
</body>

