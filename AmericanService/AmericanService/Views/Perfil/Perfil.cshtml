
@{
    ViewBag.Title = "Perfil";
}

@model  AmericanService.Models.Usuario


<head>
    <meta charset='utf-8'>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../Content/cssmenu.css">
    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
</head>
<body>
    <div id='cssmenu'>
        <ul>
            <li class='active'><a href='#'><span>Home</span></a></li>
            <li><a href='#'><span>Products</span></a></li>
            <li><a href='#'><span>Company</span></a></li>
            <li class='last'><a href='#'><span>Contact</span></a></li>
        </ul>
    </div>


    <h1>Gestión de perfil</h1>
    <h3>Cédula: <input type="text" name="cedula" value=@Model.cedula style="text-align:center;"> </h3>
    <h3>Nombre: <input type="text" name="nombre" value=@Model.nombre style="text-align:center;"></h3>
    <h3>Apellidos: <input type="text" name="apellidos" value=@Model.apellidos style="text-align:center;"></h3>
    <h3>Cumpleaños: <input type="text" name="fecha_nacimiento" value=@Model.fecha_nacimiento style="text-align:center;"></h3>
    <h3>Fecha de ingreso: <input type="text" name="fecha_ingreso" value=@Model.fecha_ingreso style="text-align:center;"></h3>
    <h3>Estado: <input type="text" name="estado" value=@Model.estado style="text-align:center;"></h3>
    <h3>Desempeño: <input type="text" name="desempeno" value=@Model.desempeno style="text-align:center;"></h3>
    <h3>Supervisor: <input type="text" name="supervisor" value=@Model.supervisor style="text-align:center;"></h3>
    <input type="submit" value="Editar">
</body>




