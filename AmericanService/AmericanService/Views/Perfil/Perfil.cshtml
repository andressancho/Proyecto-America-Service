                    <input type="text" class="form-control" name="segundo_apellido" id="segundo_apellido" readonly value=@Model.segundo_apellido>
                    <label>Cumpleaños:</label>
                    <input type="date" class="form-control" name="fecha_nacimiento" readonly value=@Model.fecha_nacimiento.ToString("yyyy-MM-dd")>
                    <label>Fecha de ingreso:</label>
                    <input type="date" class="form-control" name="fecha_ingreso" readonly value=@Model.fecha_ingreso.ToString("yyyy-MM-dd")>

                </div>
                <div class="col-sm">
                    <label>Estado:</label>
                    <br />
                    @if (Model.estado == "Activo")
                    {
                        <label>Activo</label> <input class="separar" checked="checked"disabled id="estado" name="estado" type="radio" value="A">
                        <br />
                        <label>Inactivo</label><input class="separar" id="estado" name="estado" disabled type="radio" value="I">

                    }

                    else if (Model.estado == "Inactivo")
                    {
                        <label>Activo</label> <input class="separar" id="estado" name="estado" disabled type="radio" value="A">
                        <br />
                        <label>Inactivo</label><input class="separar" checked="checked" id="estado" disabled name="estado" type="radio" value="I">
