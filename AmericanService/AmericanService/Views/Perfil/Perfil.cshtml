
@{
    ViewBag.Title = "Perfil";
    Layout = "~/Views/Shared/_Menu.cshtml";
}

@model  AmericanService.Models.Usuario


<head>
    <meta charset='utf-8'>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
</head>
<body>
        @using (Html.BeginForm("Editar", "Perfil"))
        {
            <div class="d-flex justify-content-center align-items-center container">
                <div class="row">
                    <div class="form-group">
                        <h1>Mi Perfil</h1>
                        <label>Cédula:</label>
                        <input type="text" class="form-control" name="cedula" value=@Model.cedula>
                        <label>Nombre:</label>
                        <input type="text" class="form-control" name="nombre" value=@Model.nombre>
                        <label>Primer apellido:</label>
                        <input type="text" class="form-control" name="apellidos" value=@Model.apellidos>
                        <label>Cumpleaños:</label>
                        <input type="text" class="form-control" name="fecha_nacimiento" value=@Convert.ToString(Model.fecha_nacimiento)>
                        <label>Fecha de ingreso:</label>
                        <input type="date" class="form-control" name="fecha_ingreso" value="12-10-1997">
                        <label>Estado:</label>
                        <input type="text" class="form-control" name="estado" value=@Model.estado>
                        <label>Desempeño:</label>
                        <input type="text" class="form-control" name="desempeno" value=@Model.desempeno>
                        <label>Supervisor:</label>
                        <input type="text" class="form-control" name="supervisor" value=@Model.supervisor>
                    </div>
                </div>
            </div>
    }
</body>




