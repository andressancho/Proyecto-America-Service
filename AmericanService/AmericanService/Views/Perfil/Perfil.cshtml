                    <br />
                    @if (Model.tipo == "Administrador")
                    {
                        <label>Administrador</label> <input checked="checked" id="Tipo" disabled name="tipo" type="radio" value="A">
                        <label>Supervisor</label><input id="Tipo" name="tipo" disabled type="radio" value="S">
                        <label>Colaborador</label><input id="Tipo" name="tipo" disabled type="radio" value="C">
                    }
                    else if (Model.tipo == "Supervisor")
                    {
                        <label>Administrador</label> <input id="Tipo" name="tipo" disabled type="radio" value="A">
                        <label>Supervisor</label><input checked="checked" id="tipo" disabled name="Tipo" type="radio" value="S">
                        <label>Colaborador</label><input id="Tipo" name="tipo" disabled type="radio" value="C">
                    }
                    else
                    {
                        <label>Administrador</label> <input id="Tipo" disabled name="tipo" type="radio" value="A">
                        <label>Supervisor</label><input id="Tipo" disabled name="tipo" type="radio" value="S">
                        <label>Colaborador</label><input checked="checked" disabled id="tipo" name="Tipo" type="radio" value="C">
                    }

                    <br />
                </div>

            </div>
        </div>
    </form>
    }

</body>

<script type="text/javascript">
    var frmvalidator = new Validator("editar");



    frmvalidator.addValidation("primer_nombre", "req", "Por favor ingrese el primer nombre")
    frmvalidator.addValidation("primer_apellido", "req", "Por favor ingrese el primer apellido")
    frmvalidator.addValidation("segundo_apellido", "req", "Por favor ingrese el segundo apellido")
    frmvalidator.addValidation("cedula", "req", "Por favor ingrese la cedula")

</script>
