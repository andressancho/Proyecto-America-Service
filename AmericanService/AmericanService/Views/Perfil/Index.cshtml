
@{
    ViewBag.Title = "Index";
}


@model  IEnumerable<AmericanService.Models.Usuario>

<head>
    <meta charset='utf-8'>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../Content/menu.css">
    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
</head>


<body>
    <div id='cssmenu'>
        <ul>


            <li> @Html.ActionLink("Reclutandos", "Index", "Historico")</li>
            <li> @Html.ActionLink("Gestionar Perfil", "gestionar_perfil", "Perfil")</li>
            <li> @Html.ActionLink("Crear Perfil", "Crear", "Perfil")</li>
            <li> @Html.ActionLink("Colaboradores", "Index", "Perfil")</li>
            <li><a href='#'><span>Evaluaciones</span></a></li>
            <li><a href='#'><span>Administrador</span></a></li>
            <li> @Html.ActionLink("Histórico", "Index", "Historico")</li>
            <li class='last'><a href='#'><span>Reportes</span></a></li>
        </ul>
    </div>

    <br />

    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>Cédula</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Estado</th>
            <th>Fecha de Ingreso</th>
            <th>Fecha de Nacimiento</th>
            <th>Usuario</th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>@item.cedula</td>
            <td>@item.nombre</td>
            <td>@item.apellidos</td>
            <td>@item.estado</td>
            <td>@item.fecha_ingreso</td>
            <td>@item.fecha_nacimiento</td>
            <td>@item.usuario</td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { cedula = item.cedula })|
                @Html.ActionLink("Delete", "Delete", new { cedula = item.cedula })
            </td>
        </tr>
        }

    </table>
</body>

