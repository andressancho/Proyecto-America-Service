
@{

    Layout = "~/Views/Shared/_Menu.cshtml";
}


@model  IEnumerable<AmericanService.Models.Usuario>

<head>
    <meta charset='utf-8'>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../Content/tabla.css">
    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
</head>


<body>
    <div class="margen">
        <h2>Colaboradores</h2>

        <br />
        <div>

            @using (Html.BeginForm("Index", "Perfil"))
            {

                <label>Activos</label> <input checked="checked" id="Estado" name="Estado" type="radio" value="A">
                <label>Inactivos</label><input id="Estado" name="Estado" type="radio" value="I">
                <input type="submit" value="Filtrar">
            }




        </div>

        <br />


        <table id="diseno2">
            <tr>
                <th>Cédula</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Estado</th>
                <th>Fecha de Ingreso</th>
                <th>Fecha de Nacimiento</th>
                <th>Usuario</th>
                <th>Opciones</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.cedula</td>
                    <td>@item.nombre</td>
                    <td>@item.apellidos</td>
                    <td>@item.estado</td>
                    <td>@item.fecha_ingreso</td>
                    <td>@item.fecha_nacimiento</td>
                    <td>@item.usuario</td>
                    <div class="letra">
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { cedula = item.cedula })|
                            @Html.ActionLink("Delete", "Delete", new { cedula = item.cedula })
                        </td>
                    </div>
                </tr>
            }

        </table>
    </div>
</body>

