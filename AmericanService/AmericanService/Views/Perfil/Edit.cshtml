@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Menu.cshtml";
    if (Session["Sid"] == null)
    {
        Response.Redirect("../Home/Index");
    }

    if (Session["tipo"] == "Colaborador")
    {
        Response.Redirect("../Perfil/gestionar_perfil");
    }
    else if (Session["tipo"] == "Administrador")
    {
        Layout = "~/Views/Shared/_Menu.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Menu_Supervisor.cshtml";
    }

}

@model  AmericanService.Models.Usuario


<head>
    <meta charset='utf-8'>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
    <script src="~/Scripts/gen_validatorv4.js" type="text/javascript"></script>
</head>
<body>

    <form action="/Perfil/Editar_otro_perfil" method="post" id="editar">
        @if (Session["tipo"] == "Administrador")
        {
            <div class="container">
                <h1>Editar Perfil</h1>
                <input type="hidden" name="ced" id="ced" value=@Model.cedula>
                <div class="row">
                    <div class="col-sm">

                        <label>Cédula:</label>
                        <input type="text" class="form-control" name="cedula" id="cedula" value=@Model.cedula>
                        <label>Primer Nombre:</label>
                        <input type="text" class="form-control" name="primer_nombre" id="primer_nombre" value=@Model.primer_nombre>
                        <label>Segundo Nombre:</label>
                        <input type="text" class="form-control" name="segundo_nombre" id="segundo_nombre" value=@Model.segundo_nombre>
                        <label>Primer Apellido:</label>
                        <input type="text" class="form-control" name="primer_apellido" id="primer_apellido" value=@Model.primer_apellido>
                        <label>Segundo Apellido:</label>
                        <input type="text" class="form-control" name="segundo_apellido" id="segundo_apellido" value=@Model.segundo_apellido>
                        <label>Cumpleaños:</label>
                        <input type="date" class="form-control" name="fecha_nacimiento" value=@Model.fecha_nacimiento.ToString("yyyy-MM-dd")>
                        <label>Fecha de ingreso:</label>
                        <input type="date" class="form-control" name="fecha_ingreso" value=@Model.fecha_ingreso.ToString("yyyy-MM-dd")>

                    </div>
                    <div class="col-sm">
                        <label>Estado:</label>
                        <br />
                        @if (Model.estado == "Activo")
                        {
                            <label>Activo</label> <input checked="checked" id="estado" name="estado" type="radio" value="A">
                            <label>|</label>
                            <label>Inactivo</label><input id="estado" name="estado" type="radio" value="I">

                        }
                        else if (Model.estado == "Inactivo")
                        {
                            <label>Activo</label> <input id="estado" name="estado" type="radio" value="A">
                            <label>|</label>
                            <label>Inactivo</label><input checked="checked" id="estado" name="estado" type="radio" value="I">

                        }
                        <br />
                        <label>Desempeño:</label>
                        <input type="text" class="form-control" name="desempeno" readonly value=@Model.desempeno>

                        <label>Productividad:</label>
                        <input type="number" class="form-control" name="productividad" value=@Model.productividad>
                        <label>Pruebas:</label>
                        <input type="number" class="form-control" name="pruebas" value=@Model.pruebas>
                        <label>Habilidades Blandas:</label>
                        <input type="number" class="form-control" name="habilidades" value=@Model.habilidades_blandas>
                        <label>Supervisor:</label>
                        <input type="text" class="form-control" name="supervisor" value=@Model.supervisor>
                        <label>Tipo:</label>
                        <br />
                        @if (Model.tipo == "Administrador")
                        {
                            <label>Administrador</label> <input checked="checked" id="Tipo" name="tipo" type="radio" value="A">
                            <label>|</label>
                            <label>Supervisor</label><input id="Tipo" name="tipo" type="radio" value="S">
                            <label>|</label>
                            <label>Colaborador</label><input id="Tipo" name="tipo" type="radio" value="C">
                        }
                        else if (Model.tipo == "Supervisor")
                        {
                            <label>Administrador</label> <input id="Tipo" name="tipo" type="radio" value="A">
                            <label>|</label>
                            <label>Supervisor</label><input checked="checked" id="tipo" name="Tipo" type="radio" value="S">
                            <label>|</label>
                            <label>Colaborador</label><input id="Tipo" name="tipo" type="radio" value="C">
                        }
                        else
                        {
                            <label>Administrador</label> <input id="Tipo" name="tipo" type="radio" value="A">
                            <label>|</label>
                            <label>Supervisor</label><input id="Tipo" name="tipo" type="radio" value="S">
                            <label>|</label>
                            <label>Colaborador</label><input checked="checked" id="tipo" name="Tipo" type="radio" value="C">
                        }

                        <br />
                        <input type="submit" class="form-control btn btn-outline-primary" value="Editar" />
                    </div>

                </div>
            </div>
        }
        else
        {
            <div class="container">
                <h1>Editar Perfil</h1>
                <input type="hidden" name="ced" id="ced" value=@Model.cedula>
                <div class="row">
                    <div class="col-sm">

                        <label>Cédula:</label>
                        <input type="text" class="form-control" name="cedula" readonly id="cedula" value=@Model.cedula>
                        <label>Primer Nombre:</label>
                        <input type="text" class="form-control" name="primer_nombre" readonly id="primer_nombre" value=@Model.primer_nombre>
                        <label>Segundo Nombre:</label>
                        <input type="text" class="form-control" name="segundo_nombre" readonly id="segundo_nombre" value=@Model.segundo_nombre>
                        <label>Primer Apellido:</label>
                        <input type="text" class="form-control" name="primer_apellido" readonly id="primer_apellido" value=@Model.primer_apellido>
                        <label>Segundo Apellido:</label>
                        <input type="text" class="form-control" name="segundo_apellido" readonly id="segundo_apellido" value=@Model.segundo_apellido>
                        <label>Cumpleaños:</label>
                        <input type="date" class="form-control" name="fecha_nacimiento" readonly value=@Model.fecha_nacimiento.ToString("yyyy-MM-dd")>
                        <label>Fecha de ingreso:</label>
                        <input type="date" class="form-control" name="fecha_ingreso" readonly value=@Model.fecha_ingreso.ToString("yyyy-MM-dd")>

                    </div>
                    <div class="col-sm">
                        <label>Estado:</label>
                        <br />
                        @if (Model.estado == "Activo")
                        {
                            <label>Activo</label> <input checked="checked" disabled id="estado" name="estado" type="radio" value="A">
                            <label>|</label>
                            <label>Inactivo</label><input id="estado" disabled name="estado" type="radio" value="I">

                        }
                        else if (Model.estado == "Inactivo")
                        {
                            <label>Activo</label> <input id="estado" disabled name="estado" type="radio" value="A">
                            <label>|</label>
                            <label>Inactivo</label><input checked="checked" disabled id="estado" name="estado" type="radio" value="I">

                        }
                        <br />
                        <label>Desempeño:</label>
                        <input type="text" class="form-control" name="desempeno" readonly value=@Model.desempeno>

                        <label>Productividad:</label>
                        <input type="number" class="form-control" name="productividad" value=@Model.productividad>
                        <label>Pruebas:</label>
                        <input type="number" class="form-control" name="pruebas" value=@Model.pruebas>
                        <label>Habilidades Blandas:</label>
                        <input type="number" class="form-control" name="habilidades" value=@Model.habilidades_blandas>
                        <label>Supervisor:</label>
                        <input type="text" class="form-control" name="supervisor" readonly value=@Model.supervisor>
                        <label>Tipo:</label>
                        <br />
                        @if (Model.tipo == "Administrador")
                        {
                            <label>Administrador</label> <input checked="checked" disabled id="Tipo" name="tipo" type="radio" value="A">
                            <label>|</label>
                            <label>Supervisor</label><input id="Tipo" name="tipo" disabled type="radio" value="S">
                            <label>|</label>
                            <label>Colaborador</label><input id="Tipo" name="tipo" disabled type="radio" value="C">
                        }
                        else if (Model.tipo == "Supervisor")
                        {
                            <label>Administrador</label> <input id="Tipo" disabled name="tipo" type="radio" value="A">
                            <label>|</label>
                            <label>Supervisor</label><input checked="checked" disabled id="tipo" name="Tipo" type="radio" value="S">
                            <label>|</label>
                            <label>Colaborador</label><input id="Tipo" name="tipo" disabled type="radio" value="C">
                        }
                        else
                        {
                            <label>Administrador</label> <input id="Tipo" disabled name="tipo" type="radio" value="A">
                            <label>|</label>
                            <label>Supervisor</label><input id="Tipo" name="tipo" disabled type="radio" value="S">
                            <label>|</label>
                            <label>Colaborador</label><input checked="checked" disabled id="tipo" name="Tipo" type="radio" value="C">
                        }

                        <br />
                        <input type="submit" class="form-control btn btn-outline-primary" value="Editar" />
                    </div>

                </div>
            </div>
        }

    </form>
</body>

<script type="text/javascript">
    var frmvalidator = new Validator("editar");



    frmvalidator.addValidation("primer_nombre", "req", "Por favor ingrese el primer nombre")
    frmvalidator.addValidation("primer_apellido", "req", "Por favor ingrese el primer apellido")
    frmvalidator.addValidation("segundo_apellido", "req", "Por favor ingrese el segundo apellido")
    frmvalidator.addValidation("cedula", "req", "Por favor ingrese la cedula")

</script>
